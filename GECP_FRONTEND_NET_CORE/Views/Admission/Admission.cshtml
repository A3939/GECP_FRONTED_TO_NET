
@{
    ViewData["Title"] = "Admission";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    <link href="@Url.Content("~/css/admission.css")" rel="stylesheet" />
}

<!-- 1. Admission Procedure-header  -->
<div class="header-block row d-flex align-items-center mx-auto">
        <img src="~/images/admissionprocedure/admission_bg_img.jpg" alt="Womens" />

    <!-- <div class="text-block mx-auto text-center "> -->
    <div class="text-block text-block mx-auto d-flex align-items-center justify-content-center">
        Admission Procedure
    </div>
</div>

<!-- 2. About-college -->
<div class="p-3">
    <div class="about-college container text-center p-4">
        Government Engineering College, Patan(GECP), is government aided educational institution in Katpur, near
        Patan,
        Gujarat. The institute offers undergraduate level engineering courses. The college was founded in April
        2004
        and
        is affiliated to Gujarat Technological University(GTU).
    </div>
</div>

<!-- 3. student intake -->
<div class="bg-color mx-auto p-2">
    <div class="text-center text-light student-intake-title mb-3">
        Student Intake
    </div>
    <div class="mx-auto">
        <div class="row text-center text-light p-2">
            <div class="col">
                <i class="icons fa fa-microchip text-info"></i>
                <div class="number">30</div>
                <p class="branch"> EC</p>
            </div>
            <div class="col">
                <i class="icons fa fa-laptop text-info"></i>
                <div class="number">120</div>
                <p class="branch">COMPUTER</p>
            </div>
            <div class="col">
                <i class="icons fa fa-bolt text-info"></i>
                <div class="number">60</div>
                <p class="branch">ELECTRICAL</p>
            </div>
            <div class="col">
                <!-- <i class="icons fa fa-hard-hat text-info"></i> -->
                <i class="icons fa fa-building text-info"></i>
                <div class="number">60</div>
                <p class="branch">CIVIL</p>
            </div>
            <div class="col">
                <i class="icons fa fa-wrench text-info"></i>
                <div class="number">90</div>
                <p class="branch">MECHANICAL</p>
            </div>
        </div>
    </div>
</div>

<!-- 4. Admission Process -->
<div class="m-4">
    <div class="m-3">
        <div class="headings font-weight-bold h3">Admission Process</div>
    </div>

    <div class=" row align-items-center mt-3 clearfix">

        <!-- Column 1 -->
        <div class="img-student d-flex justify-content-center mx-auto  col-lg-6 col-xl-6 col-12  ">
            
                <img src="~/images/admissionprocedure/admission_process.jpg" alt="students" class="img-fluid" />
        </div>

        <!-- Column 2 -->
        <div class=" col-lg-6 col-xl-6 col-12 mt-3">
            <div class="mt-4">
                <table class="table">
                    <tr>
                        <td>
                            1. Obtaining Information Booklet and PIN
                        </td>
                    </tr>
                    <tr>
                        <td>
                            2. Online Registration
                        </td>
                    </tr>
                    <tr>
                        <td>
                            3. Verification of Documents
                        </td>
                    </tr>
                    <tr>
                        <td>
                            4. Publication of Provistional Merit Number/Merit List
                        </td>
                    </tr>
                    <tr>
                        <td>
                            5. Online Choice Filling
                        </td>
                    </tr>
                    <tr>
                        <td>
                            6. Allotment, Confirmation and Reporting
                        </td>
                    </tr>
                </table>
            </div>
        </div>

    </div>
</div>


<!-- 5. Fees Structure & Documents REquired -->

<div class="details-block">
    <div class="object-block  mt-5 py-5 row">

        <!-- fees structure block -->
        <div class="container mx-auto col-md-6 px-5">
            <div class="headings h4 font-weight-bold text-white mb-5">Fees Structure</div>
            <div class="">
                <table class="table table-striped bg-light">
                    <thead>
                        <tr>
                            <th>Courses</th>
                            <th>Annual Fees</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="text-info">B.E.(ELECTRICAL ENGINEERING)</td>
                            <td>1500</td>
                        </tr>
                        <tr>
                            <td class="text-info">B.E.(COMPUTER SCIENCE AND ENGINEERING)</td>
                            <td>1500</td>
                        </tr>
                        <tr>
                            <td class="text-info">B.E.(CIVIL ENGINEERING)</td>
                            <td>1500</td>
                        </tr>
                        <tr>
                            <td class="text-info">B.E.(ELECTRONICS AND COMMUNICATION ENGINEERING)</td>
                            <td>1500</td>
                        </tr>
                        <tr>
                            <td class="text-info">B.E.(MECHANICAL ENGINEERING)</td>
                            <td>1500</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- documents block -->
        <div class="doc-box container mx-auto col-md-6 px-5">
            <div class=" headings h4 font-weight-bold text-white mb-5">Documents Required</div>
            <div class=" text-white doc">
                <ul>
                    <li class="m-3">Class 10 & 12 Certificate</li>
                    <li class="m-3">Gujcet Marksheet</li>
                    <li class="m-3">TC(Transfer Certificate)</li>
                    <li class="m-3">Passport Size Pictures</li>
                    <li class="m-3">Caste Certificate (if required)</li>
                    <li class="m-3">Income Certificate (if required)</li>
                    <li class="m-3">Domicile Certificate (if required)</li>
                    <li class="m-3">Printout of Registration Form</li>
                </ul>
            </div>
        </div>

    </div>
</div>

